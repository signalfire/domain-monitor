# File: domain-monitor/.env.example
# Domain Monitor - Example Environment Configuration

# Application settings
APP_NAME=domain-monitor
APP_VERSION=0.1.0
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Sentry configuration
SENTRY_DSN=Sentry here
SENTRY_ENVIRONMENT=production  # production, staging, development
SENTRY_TRACES_SAMPLE_RATE=0.1

# API callback configuration
API_CALLBACK_URL=https://api.yourdomain.com/domain-monitor/callback
API_AVAILABLE_CALLBACK_URL=https://api.yourdomain.com/domain-monitor/available
API_AUTH_TOKEN=your-secret-bearer-token
API_TIMEOUT=30
API_MAX_RETRIES=3
API_RETRY_BACKOFF=1.0

# Domain API configuration
DOMAIN_API_URL=https://api.yourdomain.com/domains-to-monitor
DOMAIN_API_REFRESH_INTERVAL=300  # How often to refresh domain list (seconds)

# Checking intervals (in seconds)
LAYER1_CHECK_INTERVAL=300  # 5 minutes
LAYER2_CHECK_INTERVAL=1800  # 30 minutes
LAYER3_CHECK_INTERVAL=10800  # 3 hours

# Rate limiting configuration (checks per minute)
DNS_CHECKS_PER_MINUTE=100
HTTP_CHECKS_PER_MINUTE=60
REGISTRAR_CHECKS_PER_MINUTE=30
RDAP_CHECKS_PER_MINUTE=20
WHOIS_CHECKS_PER_MINUTE=10

# Availability scoring configuration
AVAILABILITY_THRESHOLD=0.75
DNS_WEIGHT=0.3
HTTP_WEIGHT=0.2
REGISTRAR_WEIGHT=0.2
RDAP_WEIGHT=0.15
WHOIS_WEIGHT=0.15

# Horizontal scaling
INSTANCE_ID=default
ENABLE_DISTRIBUTED_LOCKING=false